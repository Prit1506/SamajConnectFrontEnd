<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Event Image with Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/eventImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_banner" />

            <!-- Gradient Overlay for better text readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />

        </FrameLayout>

        <!-- Event Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/eventTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Event Title"
                android:textColor="#1a1a1a"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/eventDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Event description with more details about the event"
                android:textColor="#555555"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <!-- Event Details Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Date Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#1db7ae" />

                    <TextView
                        android:id="@+id/eventDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="July 15, 2025 â€¢ 6:30 PM"
                        android:textColor="#1db7ae"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        app:tint="#ff6b6b" />

                    <TextView
                        android:id="@+id/eventLocationTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Event Location, City, State"
                        android:textColor="#ff6b6b"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Reaction Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <!-- Reaction Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:paddingVertical="8dp">

                    <!-- Like Button Container -->
                    <LinearLayout
                        android:id="@+id/likeButtonContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/reaction_button_background"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">

                        <ImageView
                            android:id="@+id/likeIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_thumb_up_outline"
                            app:tint="#666666" />

                        <TextView
                            android:id="@+id/likeCountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:minWidth="24dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Dislike Button Container -->
                    <LinearLayout
                        android:id="@+id/dislikeButtonContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/reaction_button_background"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">

                        <ImageView
                            android:id="@+id/dislikeIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_thumb_down_outline"
                            app:tint="#666666" />

                        <TextView
                            android:id="@+id/dislikeCountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:minWidth="24dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- View Reactions Button -->
                    <LinearLayout
                        android:id="@+id/viewReactionsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/view_reactions_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_people"
                            app:tint="#1db7ae"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/viewReactionsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View reactions"
                            android:textColor="#1db7ae"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Reaction Progress Bar -->
                <LinearLayout
                    android:id="@+id/reactionProgressContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="4dp"
                    android:visibility="gone">

                    <View
                        android:id="@+id/likeProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_weight="0"
                        android:background="@drawable/like_progress_background"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:id="@+id/dislikeProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_weight="0"
                        android:background="@drawable/dislike_progress_background"
                        android:layout_marginStart="2dp" />

                </LinearLayout>

                <!-- Reaction Summary Text -->
                <TextView
                    android:id="@+id/reactionSummaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Admin Action Buttons (Conditionally Visible) -->
            <LinearLayout
                android:id="@+id/adminButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:visibility="gone">

                <!-- Update Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/updateEventButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:text="Update"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="18dp"
                    app:backgroundTint="#1db7ae"
                    app:icon="@drawable/ic_edit"
                    app:iconSize="16dp"
                    app:iconGravity="start"
                    app:iconTint="@android:color/white" />

                <!-- Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteEventButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Delete"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="18dp"
                    app:backgroundTint="#ff6b6b"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="16dp"
                    app:iconGravity="start"
                    app:iconTint="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>