<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="@dimen/screen_padding"
    tools:context=".ForgotPasswordActivity">

    <!-- Background decoration -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"
        android:background="@drawable/circle_decoration"
        android:alpha="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Header with enhanced styling -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_gradient_background"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="🔐 Reset Password"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/forgot_title_text_size"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:autoSizeMaxTextSize="26sp"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enter your details to reset password"
                android:textColor="#E8F5E8"
                android:textSize="14sp"
                android:alpha="0.9" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Forgot Password Image with card styling -->
    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/forgot_image_margin_top"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleCard">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8FFF8"
            android:padding="16dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/forgot_password"/>

    </androidx.cardview.widget.CardView>

    <!-- Scrollable Form Container with card styling -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/forgot_form_margin_top"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCard">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="clip_vertical"
                android:orientation="vertical"
                android:padding="32dp"
                android:paddingBottom="@dimen/form_bottom_padding">

                <!-- Email Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="8dp"
                        android:text="Email Address"
                        android:textColor="#2E7D32"
                        android:textSize="@dimen/label_text_size"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#4CAF50"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#4CAF50">

                        <EditText
                            android:id="@+id/editTextText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_height"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="Enter your email address"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/input_padding"
                            android:textSize="@dimen/input_text_size"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="14sp"
                            app:autoSizeTextType="uniform" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- OTP Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="8dp"
                        android:text="Verification Code"
                        android:textColor="#2E7D32"
                        android:textSize="@dimen/label_text_size"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#4CAF50"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#4CAF50">

                        <EditText
                            android:id="@+id/editTextOTP"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_height"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="Enter 6-digit OTP"
                            android:inputType="number"
                            android:maxLength="6"
                            android:padding="@dimen/input_padding"
                            android:textSize="@dimen/input_text_size"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="14sp"
                            app:autoSizeTextType="uniform" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- New Password Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_key"
                        android:drawablePadding="8dp"
                        android:text="New Password"
                        android:textColor="#2E7D32"
                        android:textSize="@dimen/label_text_size"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#4CAF50"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#4CAF50"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#4CAF50">

                        <EditText
                            android:id="@+id/editTextNewPassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_height"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="Enter new password"
                            android:inputType="textPassword"
                            android:padding="@dimen/input_padding"
                            android:textSize="@dimen/input_text_size"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="14sp"
                            app:autoSizeTextType="uniform" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Send OTP Button with enhanced styling -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/button_gradient_background"
                        android:fontFamily="sans-serif-medium"
                        android:minHeight="56dp"
                        android:padding="@dimen/button_padding"
                        android:text="🚀 Send OTP"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/button_text_size"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="16sp"
                        app:autoSizeTextType="uniform" />

                </androidx.cardview.widget.CardView>

                <!-- Additional help text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="💡 Check your email for the verification code"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:alpha="0.8" />

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>