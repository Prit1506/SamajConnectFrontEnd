<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Relationship"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Search User Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search User"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etSearchUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter name or email"
                android:padding="12dp"
                android:background="@drawable/edittext_background" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Search"
                android:background="@drawable/button_selector" />

        </LinearLayout>

        <!-- Search Results -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSearchResults"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="#f9f9f9"
            android:scrollbars="vertical" />

        <!-- Relationship Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Relationship Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerRelationshipType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/spinner_background" />

        <!-- NEW: Lineage Context -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lineage Context (Optional)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For relationships like GRANDSON, NEPHEW, etc., specify if it's through father's side (PATERNAL) or mother's side (MATERNAL)"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerLineageContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/spinner_background" />

        <!-- Request Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Message (Optional)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etRequestMessage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Enter a message for your relationship request..."
            android:gravity="top"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="24dp" />

        <!-- Send Request Button -->
        <Button
            android:id="@+id/btnSendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Relationship Request"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:textColor="#ffffff"
            android:padding="16dp" />

        <!-- Info Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note: All relationship requests require approval from the other user before being added to the family tree."
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="16dp"
            android:textStyle="italic" />

    </LinearLayout>

</ScrollView>
